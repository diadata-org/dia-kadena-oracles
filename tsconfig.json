{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
